model User {
  id                 Int          @id @default(autoincrement())
  name               String
  email              String       @unique
  profilePhoto       String?
  password           String
  idNumber           String?
  role               UserRole     @default(GUEST) // Enum for user r
  needPasswordChange Boolean      @default(true) // Indicates if
  status             UserStatus   @default(ACTIVE) // Enum for
  isDeleted          Boolean      @default(false)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  admin              Admin?
  superAdmin         SuperAdmin?
  hrAdmin            HrAdmin?
}

model Admin {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  password       String
  profilePhoto   String?
  changePassword Boolean   @default(true)
  userId         Int       @unique
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User     @relation(fields: [userId], references: [id])
}

model SuperAdmin {
  id             Int       @id @default(autoincrement())
