
model Employee {
  id                     String          @id @default(uuid())
  name                   String
  idNumber               String          @unique
  jobTitle               String
  educationQualification String
  profilePhoto           String?
  group                  String
  joiningDate            DateTime
  email                  String          @unique
  phoneNumber            String          @unique
  isDeleted              Boolean         @default(false)
  gender                 String
  nationality            String
  status                 EmployeeStatus  @default(ACTIVE)
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @updatedAt

  employeeIds            EmployeeId[]   @relation("EmployeeIdsRelation")
  employeeFiles          EmployeeFile[] @relation("EmployeeFilesRelation")

  @@map("Employees")
}

model EmployeeId {
  id               String    @id @default(uuid())
  name             String
  jobTitle         String
  employeeId       String    @unique
  group            String
  issuedDate       DateTime
  expiryDate       DateTime
  ReamingDate      Int
  iqamaDate        String
  iqamaExpiryDate  String
  RemaingIqamaDate Int
  authority        String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  employee         Employee @relation("EmployeeIdsRelation", fields: [employeeId], references: [id])

  @@map("EmployeeIds")
}


model EmployeeFile {
  id         String    @id @default(uuid())
  employeeId String
  fileType   String
  filePath   String
  uploadedAt DateTime  @default(now())
  employee   Employee @relation("EmployeeFilesRelation", fields: [employeeId], references: [id])

  @@map("EmployeeFiles")
}